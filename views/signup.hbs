<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel='shortcut icon' type='image/x-icon' href='/svg/logo.svg' />

    <link rel="stylesheet" href="/css/utils.css" />
    <link rel="stylesheet" href="/css/sign.css" />

    <!-- Icons -->
    <script
      src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"
    ></script>

    <title>MinimaList - Sign in</title>
  </head>
  <body>
    <div class="container">
      <div class="icon flex-item">
        <a href="/">
        <lord-icon
          src="https://cdn.lordicon.com/wloilxuq.json"
          colors="primary:#191919,secondary:#ff8000"
          style="width: 96px; height: 96px"
        >
        </lord-icon>
        </a>
      </div>
      <div class="card authorize-card">
        <h2 class="subtitle">Registration</h2>
          <form action="">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="name" name="name" id="name_input">
              <label for="name" id="name-validation" class="validation-label hidden">Name is required</label>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" id="email_input">
              <label for="email" id="email-validation" class="validation-label hidden">Email is required</label>

            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password_input">
              <label for="email" id="password-validation" class="validation-label hidden">Password is required</label>

            </div>
            <p class="registration-error-text hidden">Anime</p>
            <button type="submit" class="button bg-orange">Sign up!</button>

          </form>
          <p>Already have account? <span><a href="/signin" class="link-button link-small link-button-orange">Sign in!</a></span></p>
      </div>
    </div>
    {{>footer}}
    <script src="/js/signup.js"></script>
  </body>
</html>